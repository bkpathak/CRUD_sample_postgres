    <style>
		
		body, html{
			margin:0px;
			padding:0px;			
		}
		
		#emp_tbl td {
			border:gray solid 1px;
			width: 250px;
			text-align:center;
			padding:0px;
			margin:0px;
		}
		
		
		    
    </style>

  </head>
  <body>
    <h1>Employee Info</h1>
    <div>
    
		<table id="emp_tbl">
			<tr>
				<td>First Name</td>
				<td>Last Name</td>
				<td>Start Date</td>

				<td style="width:50px;">Age</td>
								<td style="border:none;"></td>

			</tr>
			<tr>
				<td><input type=text id="fname"></td>
				<td><input type=text id="lname"></td>
				<td ><input type=text id="sdate"></td>
				<td style="width:50px;">
					<input id="age" type=text size=5>
				</td>
				<td style="border:none;"></td>
				<td style="width:50px;"><button id="add_emp">Add Info</button></td>

			</tr>
			
			
			
		</table>
		<br><br><br><br><br><br>
		<hr>
