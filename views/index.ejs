    <script>
		jQuery(function($){
			
			$("#add_emp").click(function(){
				
				alert("clicked");
				
				
				if($("#fname").val()==""){
					alert("Fill the first name!");
					return;
				}
				if($("#lname").val()==""){
					alert("Fill the last name!");
					return;
				}
				if($("#sdate").val()==""){
					alert("Fill the start date!");
					return;
				}
				if($("#age").val()==""){
					alert("Fill the age!");
					return;
				}
				
				$.ajax({
					url:"/add_emp",
					type:"POST",
					datatype:"JSON",
					data:{
						"fname":$("#fname").val(),
						"lname":$("#lname").val(),
						"sdate":$("#sdate").val(),
						"age":$("#age").val(),
					},
					success: function(data){
						alert("got data");
					}
				});
				
				
				
			});
			
			
			
			
			});
    
    </script>    
    
    
